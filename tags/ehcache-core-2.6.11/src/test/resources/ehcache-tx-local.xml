<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../main/config/ehcache.xsd">

    <defaultCache
            maxElementsInMemory="10"
            eternal="false"
            timeToIdleSeconds="5"
            timeToLiveSeconds="10"
            overflowToDisk="false"
            />


    <cache name="txCache1"
           maxElementsInMemory="10"
           eternal="false"
           timeToIdleSeconds="5"
           timeToLiveSeconds="10"
           overflowToDisk="false"
           transactionalMode="local"
           />

    <cache name="txCache2"
           maxElementsInMemory="10"
           eternal="false"
           timeToIdleSeconds="5"
           timeToLiveSeconds="10"
           overflowToDisk="false"
           transactionalMode="local"
           />

    <cache name="txCacheMemoryOnly"
           maxElementsInMemory="10"
           eternal="false"
           timeToIdleSeconds="5000"
           timeToLiveSeconds="10000"
           overflowToDisk="false"
           diskPersistent="false"
           transactionalMode="local"
           />

    <cache name="txCachePersistent"
           maxElementsInMemory="1"
           eternal="false"
           timeToIdleSeconds="5000"
           timeToLiveSeconds="10000"
           overflowToDisk="true"
           diskPersistent="true"
           transactionalMode="local"
           />

    <cache name="txCacheOverflow"
           maxElementsInMemory="1"
           eternal="false"
           timeToIdleSeconds="5"
           timeToLiveSeconds="10"
           overflowToDisk="true"
           diskPersistent="false"
           transactionalMode="local"
           />

</ehcache>
